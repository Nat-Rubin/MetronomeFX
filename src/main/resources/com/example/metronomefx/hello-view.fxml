<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.metronomefx.Controller">
   <children>
      <Label fx:id="metronomeLabel" alignment="CENTER" layoutX="217.0" layoutY="54.0" prefHeight="64.0" prefWidth="170.0" text="Metronome" textAlignment="CENTER">
         <font>
            <Font size="35.0" />
         </font></Label>
      <Button layoutX="246.0" layoutY="455.0" onAction="#playOrPause" prefHeight="50.0" prefWidth="113.0" text="Play/Pause!" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Button layoutX="455.0" layoutY="455.0" onAction="#increaseTempo" prefHeight="50.0" prefWidth="50.0" text="+">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Button layoutX="105.0" layoutY="455.0" onAction="#decreaseTempo" prefHeight="50.0" prefWidth="50.0" text="-" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font></Button>
      <Slider fx:id="tempoSlider" blockIncrement="0.0" layoutX="105.0" layoutY="523.0" max="300.0" min="30.0" onMouseReleased="#setTempo" prefHeight="15.0" prefWidth="400.0" value="60.0" />
      <Label fx:id="tempo" alignment="CENTER" layoutX="236.0" layoutY="255.0" prefHeight="68.0" prefWidth="137.0" text="60" textAlignment="CENTER">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="playA" layoutX="277.0" layoutY="556.0" onAction="#playA" prefHeight="50.0" prefWidth="50.0" text="A" textAlignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</Pane>
